<h1>Editing movie</h1>

<% form_for(@movie) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :overview %><br />
    <%= f.text_area :overview %>
  </p>
  <p>
    <%= f.label :rating %><br />
    <%= f.text_field :rating %>
  </p>
  <p>
    <%= f.label :scores%><br />
    <%= f.text_field :scores %>
  </p>
  <p>
    <%= f.label :released_on %><br />
    <%= f.datetime_select :released_on %>
  </p>
  <p>
    <%= f.label :scores%><br />
    <%= f.text_field :scores %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @movie %> |
